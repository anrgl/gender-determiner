<div class="col">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Full name</th>
        <th>Gender</th>
        <th>Is admin</th>
        <th>Last request</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <% if user == current_user || current_user.admin? %>
        <tr>
          <td><%= user.full_name %></td>
          <td><%= user.gender %></td>
          <td><%= user.is_admin %></td>
          <td><%= user.last_request.in_time_zone('Europe/Moscow').to_formatted_s(:short) %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to "Check", check_gender_path(user), method: :post %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <% unless current_user.correct? %>
    <div>
      <h4>You gender: <%= current_user.gender %>. Correct?</h4>
      <%= link_to "Correct", users_save_gender_path, method: :post, data: { confirm: 'Are you sure? '} %>
      <%= link_to "Incorrect", edit_user_path(current_user) %>
    </div>
  <% end %>
</div>